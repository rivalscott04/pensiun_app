ErrorDocument 404 /pensiun_app/404.php
RewriteEngine On
RewriteBase /pensiun_app/

# Redirect .php URLs to clean URLs (SEO friendly)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+pensiun_app/([^\s/]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Rewrite /file â†’ /file.php if file exists
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Handle invalid PHP files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} \.php$
RewriteRule ^(.*)$ /pensiun_app/404.php [L,R=404]

# Handle other invalid requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /pensiun_app/404.php [L,R=404]

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
Order Allow,Deny
Deny from all
</FilesMatch>

# Enable CORS
Header set Access-Control-Allow-Origin "*"

# Security Headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"
Header set Referrer-Policy "strict-origin-when-cross-origin"

